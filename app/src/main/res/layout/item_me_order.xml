<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="8"
            >

            <ImageView
                android:id="@+id/item_shooping_car_img"
                android:layout_width="70dp"
                android:layout_height="100dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="12dp"
                android:background="#caca10"/>

            <TextView
                android:id="@+id/item_shooping_car_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/item_shooping_car_img"
                android:text="春装新款 韩版名媛风蝙蝠袖中长款蓝色风衣外套女"
                android:textSize="14sp"
                />

            <TextView
                android:id="@+id/item_shooping_car_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_shooping_car_title"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:layout_toEndOf="@+id/item_shooping_car_img"
                android:text="颜色:湖蓝色;尺码:M"
                android:textColor="#d0d0d0"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/item_shooping_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/item_shooping_car_type"
                android:layout_below="@+id/item_shooping_car_type"
                android:layout_marginTop="20dp"
                android:text="￥98.00"
                android:textColor="#000"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已支付"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp"
                android:layout_alignTop="@+id/item_shooping_car_price"
                />

        </RelativeLayout>


    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdfdf"
        android:layout_marginTop="6dp"
        />

</LinearLayout>
